@model IEnumerable<SiMed.Models.Pessoa>

@{
    ViewBag.Title = "Index";
}

<h2>Pessoas</h2>

<p>
    @Html.ActionLink("Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Idade)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CPF }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CPF }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.CPF })
        </td>
    </tr>
}

</table>
