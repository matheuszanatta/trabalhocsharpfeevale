<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav nav-pills">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Agendamentos", "Index", "Agendamentos")</li>
                        <li>@Html.ActionLink("Cidades", "Index", "Cidades")</li>
                        <li>@Html.ActionLink("Disponibilidades", "Index", "Disponibilidades")</li>
                        <li>@Html.ActionLink("Especialidades", "Index", "Especialidades")</li>
                        <li>@Html.ActionLink("Medicos", "Index", "Medicos")</li>
                        <li>@Html.ActionLink("Pessoas", "Index", "Pessoas")</li>
                        <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                        <li class="pull-right">@Html.ActionLink("Logout", "Logout", "Login", new { @class = "navbar-link" })</li>
                        <li class="pull-right"><p class="navbar-text">@User.Identity.Name</p></li>
                    }
                    else
                    {
                        <li class="pull-right">@Html.ActionLink("Login", "Index", "Login")</li>
                    }
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
